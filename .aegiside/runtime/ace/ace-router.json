        "runtime/ace/generator/research.json",
        "runtime/ace/generator/bootstrap-enhanced.json",
        "runtime/ace/generator/auto-init.json",
        "runtime/ace/generator/intent-detector.json",
        "runtime/ace/generator/runtime-documentation.json"
