    },
    "reflector_workflows": {
      "description": "Evaluate performance and compliance",
      "suites": {
        "validation": "runtime/ace/reflector/validation-suite.json",
        "error_recovery": "runtime/ace/reflector/error-recovery-suite.json"
      },
      "individual": [
        "runtime/ace/reflector/confidence-scorer.json",
        "runtime/ace/reflector/penalty-tracker.json"
      ],
      "triggers": ["validate", "evaluate", "score", "penalty", "error", "fix", "recover"]
    },
    "curator_workflows": {
      "description": "Maintain knowledge and state",
      "suites": {
        "state_management": "runtime/ace/curator/state-suite.json"
      },
      "individual": [
        "runtime/ace/curator/github-sync.json",
        "runtime/ace/curator/atomic-rollback.json",
        "runtime/ace/curator/petition-router.json"
      ],
      "triggers": ["continue", "update", "sync", "maintain", "rollback", "petition"]
    }
  },
  "ace_components": {
    "triad_tracker": "runtime/ace/triad-tracker.json",
    "self_evolution": "runtime/ace/self-evolution-loop.json",
    "causality_tracker": "runtime/ace/causality-tracker.json"
  }
