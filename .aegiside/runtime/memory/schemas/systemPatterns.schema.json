{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["schema_version", "last_updated", "metrics"],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time"
    },
    "metrics": {
      "type": "object",
      "description": "Local reward transactions ONLY - Reference progress.json for total_rl_score",
      "required": ["rl_source_ref"],
      "properties": {
        "rl_source_ref": {"type": "string", "const": "progress.json", "description": "SINGLE SOURCE OF TRUTH for total_rl_score"},
        "tasks_completed": {"type": "integer", "minimum": 0},
        "tasks_failed": {"type": "integer", "minimum": 0},
        "commits": {"type": "integer", "minimum": 0},
        "rl_reward": {"type": "number"},
        "process_reward": {"type": "number", "minimum": 0, "maximum": 100, "description": "Agentic RL: +2(step)+10(insight)+25(milestone)+100(complete)"},
        "alignment_bonus": {"type": "number", "minimum": 0, "maximum": 20, "description": "Moral alignment reward (ICLR'25)"},
        "gae_advantage": {"type": "number", "description": "GAE advantage at time of reward"},
        "value_branch": {"type": "string", "enum": ["task_success", "safety", "alignment", "efficiency", "learning"]},
        "timestamp": {"type": "string", "format": "date-time"}
      }
    },
    "architecture_patterns": {
      "type": "array",
      "description": "TOP-APPEND MANDATORY: Prepend new patterns at [0]. Each pattern contains implementation details.",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "pattern": {"type": "string"},
          "description": {"type": "string"},
          "implementation": {"type": "string"},
          "status": {"type": "string"},
          "pattern_reward": {"type": "number", "minimum": 0, "maximum": 25, "description": "Pattern reuse milestone reward"}
        }
      }
    },
    "emd_compliance": {
      "type": "object",
      "additionalProperties": {"type": "string"}
    },
    "cost_savings": {
      "type": "object",
      "additionalProperties": {"type": "string"}
    },
    "mcp_integration": {
      "type": "object",
      "additionalProperties": {"type": "string"}
    },
    "deprecated": {
      "type": "object",
      "additionalProperties": {"type": "string"}
    }
  }
}
