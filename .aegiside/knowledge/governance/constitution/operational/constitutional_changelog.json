  "diff_tracking_system": {
    "tracking_methodology": {
      "line_level_diffs": true,
      "semantic_diffs": true,
      "structural_diffs": true,
      "dependency_tracking": true
    },
    "diff_categories": {
      "addition": {
        "description": "New content added",
        "impact_weight": 1.0,
        "review_required": true
      },
      "modification": {
        "description": "Existing content changed",
        "impact_weight": 0.8,
        "review_required": true
      },
      "deletion": {
        "description": "Content removed",
        "impact_weight": 1.2,
        "review_required": true
      },
      "restructuring": {
