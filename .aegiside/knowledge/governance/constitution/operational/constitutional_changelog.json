  "impact_analysis_framework": {
    "assessment_dimensions": {
      "governance_impact": {
        "levels": ["low", "medium", "high", "critical"],
        "criteria": [
          "changes_to_decision_making",
          "power_distribution_effects",
          "accountability_modifications",
          "oversight_impact"
        ]
      },
      "implementation_complexity": {
        "levels": ["low", "medium", "high", "critical"],
        "criteria": [
          "technical_complexity",
          "resource_requirements",
          "integration_needs",
          "migration_effort"
        ]
      },
      "stakeholder_impact": {
        "levels": ["low", "medium", "high", "critical"],
        "criteria": [
          "user_experience_changes",
          "workflow_modifications",
          "accessibility_impact",
          "training_requirements"
        ]
      },
      "compatibility_score": {
        "range": [0, 1],
        "calculation": "backward_compatibility * forward_compatibility * integration_compatibility",
        "thresholds": {
          "high": 0.9,
          "medium": 0.7,
          "low": 0.5
        }
      }
    },
    "risk_assessment": {
      "risk_categories": [
        "implementation_risk",
        "compliance_risk",
        "performance_risk",
        "security_risk",
        "usability_risk"
      ],
      "mitigation_strategies": {
        "high_risk": ["detailed_review", "stakeholder_approval", "gradual_rollout"],
        "medium_risk": ["expert_review", "testing_validation", "monitoring"],
        "low_risk": ["automated_checks", "documentation", "basic_testing"]
      }
    }
  },
  "change_management": {
    "approval_workflow": {
      "proposed": {
