{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aegiside.org/schemas/systemPatterns.json",
  "title": "System Patterns Schema",
  "description": "Architecture patterns with success metrics",
  "type": "object",
  "required": ["schema_version", "last_updated", "architecture_patterns"],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time"
    },
    "architecture_patterns": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "category", "success_rate"],
        "properties": {
          "id": {"type": "string"},
          "name": {"type": "string"},
          "category": {"type": "string"},
          "description": {"type": "string"},
          "success_rate": {"type": "number", "minimum": 0, "maximum": 100},
          "usage_count": {"type": "number", "minimum": 0},
          "last_used": {"type": "string", "format": "date-time"},
          "implementation_template": {
            "type": "object",
            "properties": {
              "steps": {"type": "array", "items": {"type": "string"}},
              "estimated_hours": {"type": "number", "minimum": 0},
              "complexity_score": {"type": "number", "minimum": 0, "maximum": 10}
            }
          },
          "variations": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {"type": "string"},
                "success_rate": {"type": "number", "minimum": 0, "maximum": 100}
              }
            }
          }
        }
      }
    },
    "successful_implementations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "pattern_id", "task_id"],
        "properties": {
          "id": {"type": "string"},
          "pattern_id": {"type": "string"},
          "task_id": {"type": "string"},
          "implementation_date": {"type": "string", "format": "date-time"},
          "completion_time_hours": {"type": "number", "minimum": 0},
          "quality_score": {"type": "number", "minimum": 0, "maximum": 10},
          "reusable_components": {"type": "array", "items": {"type": "string"}}
        }
      }
    },
    "pattern_relationships": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["primary_pattern", "related_patterns", "relationship_type"],
        "properties": {
          "primary_pattern": {"type": "string"},
          "related_patterns": {"type": "array", "items": {"type": "string"}},
          "relationship_type": {"type": "string", "enum": ["dependency", "alternative", "enhancement", "conflict"]},
          "strength": {"type": "number", "minimum": 0, "maximum": 1}
        }
      }
    },
    "optimization_suggestions": {
      "type": "array",
      "maxItems": 10,
      "items": {
        "type": "object",
        "required": ["pattern_id", "suggestion", "impact"],
        "properties": {
          "pattern_id": {"type": "string"},
          "suggestion": {"type": "string"},
          "impact": {"type": "string"},
          "confidence": {"type": "number", "minimum": 0, "maximum": 1}
        }
      }
    }
  }
}
