{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aegiside.org/schemas/blueprint.json",
  "title": "Blueprint Schema",
  "description": "Project blueprint with 6-pillar validation system",
  "type": "object",
  "required": ["project_name", "blueprint_id", "validation", "overall_score"],
  "properties": {
    "project_name": {"type": "string"},
    "idea_description": {"type": "string"},
    "created_at": {"type": "string", "format": "date-time"},
    "updated_at": {"type": "string", "format": "date-time"},
    "blueprint_id": {"type": "string"},
    "validation": {
      "type": "object",
      "required": ["pillar_1_problem", "pillar_2_solution", "pillar_3_market", "pillar_4_feasibility", "pillar_5_scalability", "pillar_6_monetization"],
      "properties": {
        "pillar_1_problem": {
          "type": "object",
          "required": ["score", "feedback", "criteria"],
          "properties": {
            "score": {"type": "number", "minimum": 0, "maximum": 100},
            "feedback": {"type": "string"},
            "criteria": {"type": "array", "items": {"type": "string"}}
          }
        },
        "pillar_2_solution": {
          "type": "object",
          "required": ["score", "feedback", "criteria"],
          "properties": {
            "score": {"type": "number", "minimum": 0, "maximum": 100},
            "feedback": {"type": "string"},
            "criteria": {"type": "array", "items": {"type": "string"}}
          }
        },
        "pillar_3_market": {
          "type": "object",
          "required": ["score", "feedback", "criteria"],
          "properties": {
            "score": {"type": "number", "minimum": 0, "maximum": 100},
            "feedback": {"type": "string"},
            "criteria": {"type": "array", "items": {"type": "string"}}
          }
        },
        "pillar_4_feasibility": {
          "type": "object",
          "required": ["score", "feedback", "criteria"],
          "properties": {
            "score": {"type": "number", "minimum": 0, "maximum": 100},
            "feedback": {"type": "string"},
            "criteria": {"type": "array", "items": {"type": "string"}}
          }
        },
        "pillar_5_scalability": {
          "type": "object",
          "required": ["score", "feedback", "criteria"],
          "properties": {
            "score": {"type": "number", "minimum": 0, "maximum": 100},
            "feedback": {"type": "string"},
            "criteria": {"type": "array", "items": {"type": "string"}}
          }
        },
        "pillar_6_monetization": {
          "type": "object",
          "required": ["score", "feedback", "criteria"],
          "properties": {
            "score": {"type": "number", "minimum": 0, "maximum": 100},
            "feedback": {"type": "string"},
            "criteria": {"type": "array", "items": {"type": "string"}}
          }
        }
      }
    },
    "overall_score": {"type": "number", "minimum": 0, "maximum": 100},
    "approval_required": {"type": "boolean"},
    "min_score_threshold": {"type": "number", "minimum": 0, "maximum": 100},
    "improvements": {"type": "array", "items": {"type": "string"}},
    "tech_stack": {
      "type": "object",
      "properties": {
        "backend": {"type": "array", "items": {"type": "string"}},
        "frontend": {"type": "array", "items": {"type": "string"}},
        "database": {"type": "array", "items": {"type": "string"}},
        "infrastructure": {"type": "array", "items": {"type": "string"}},
        "tools": {"type": "array", "items": {"type": "string"}},
        "free_tier_optimized": {"type": "boolean"}
      }
    },
    "parliamentary_approval": {
      "type": "object",
      "properties": {
        "weighted_consensus": {"type": "number", "minimum": 0, "maximum": 100},
        "approved": {"type": "boolean"}
      }
    },
    "status": {"type": "string", "enum": ["draft", "approved", "rejected", "in_progress", "completed"]}
  }
}
