{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aegiside.org/schemas/deployment.json",
  "title": "Deployment Schema",
  "description": "CI/CD automation and deployment configuration",
  "type": "object",
  "required": ["schema_version", "last_updated", "deployment_config"],
  "properties": {
    "schema_version": {"type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$"},
    "last_updated": {"type": "string", "format": "date-time"},
    "deployment_config": {
      "type": "object",
      "properties": {
        "platform": {"type": "string", "enum": ["vercel", "netlify", "railway", "shuttle", "cloudflare", "aws", "gcp", "azure"]},
        "auto_deploy": {"type": "boolean"},
        "branch_strategy": {
          "type": "object",
          "properties": {
            "production": {"type": "string"},
            "staging": {"type": "string"},
            "development": {"type": "string"}
          }
        },
        "build_config": {
          "type": "object",
          "properties": {
            "command": {"type": "string"},
            "output_directory": {"type": "string"},
            "environment_variables": {"type": "object"}
          }
        }
      }
    },
    "deployment_history": {
      "type": "array",
      "maxItems": 20,
      "items": {
        "type": "object",
        "required": ["id", "timestamp", "status"],
        "properties": {
          "id": {"type": "string"},
          "timestamp": {"type": "string", "format": "date-time"},
          "status": {"type": "string", "enum": ["success", "failed", "in_progress", "cancelled"]},
          "branch": {"type": "string"},
          "commit_sha": {"type": "string"},
          "duration_seconds": {"type": "number", "minimum": 0},
          "deployed_by": {"type": "string"}
        }
      }
    },
    "health_checks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "endpoint": {"type": "string", "format": "uri"},
          "method": {"type": "string", "enum": ["GET", "POST", "HEAD"]},
          "expected_status": {"type": "number"},
          "timeout_seconds": {"type": "number", "minimum": 1}
        }
      }
    }
  }
}
