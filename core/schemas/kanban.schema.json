{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aegiside.org/schemas/kanban.json",
  "title": "Kanban Schema",
  "$defs": {
    "proposal_id": {"type": "string", "pattern": "^proposal-[A-Za-z0-9_-]+$"},
    "kanban_task_id": {"type": "string", "pattern": "^task-[A-Za-z0-9_-]+$"},
    "roadmap_milestone_id": {"type": "string", "pattern": "^rm-[A-Za-z0-9_-]+$"},
    "governance_decision_id": {"type": "string", "pattern": "^gd-[A-Za-z0-9_-]+$"}
  },
  "description": "Task workflow management with parliamentary approval tracking",
  "type": "object",
  "required": ["schema_version", "last_updated", "columns", "tasks"],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time"
    },
    "columns": {
      "type": "object",
      "required": ["todo", "in_progress", "done", "approved"],
      "properties": {
        "todo": {
          "type": "object",
          "properties": {
            "wip_limit": {"type": "number", "minimum": 0},
            "task_ids": {"type": "array", "items": {"type": "string"}}
          }
        },
        "in_progress": {
          "type": "object",
          "properties": {
            "wip_limit": {"type": "number", "minimum": 1, "maximum": 5},
            "task_ids": {"type": "array", "items": {"type": "string"}}
          }
        },
        "done": {
          "type": "object",
          "properties": {
            "task_ids": {"type": "array", "items": {"type": "string"}}
          }
        },
        "approved": {
          "type": "object",
          "properties": {
            "task_ids": {"type": "array", "items": {"type": "string"}}
          }
        },
        "additionalProperties": false
      }
    },
    "tasks": {
      "type": "array",
      "maxItems": 100,
      "items": {
        "type": "object",
        "required": ["id", "title", "status", "priority"],
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string", "maxLength": 200},
          "description": {"type": "string", "maxLength": 1000},
          "status": {"type": "string", "enum": ["todo", "in_progress", "done", "approved", "blocked"]},
          "priority": {"type": "string", "enum": ["P0", "P1", "P2", "P3"]},
          "created_at": {"type": "string", "format": "date-time"},
          "updated_at": {"type": "string", "format": "date-time"},
          "assignee": {"type": "string", "enum": ["project_manager", "dev_minister", "tech_minister", "quality_shadow", "innovation_shadow", "analytics_shadow"]},
          "parliamentary_approval": {
            "type": "object",
            "properties": {
              "consensus_score": {"type": "number", "minimum": 0, "maximum": 100},
              "approved": {"type": "boolean"},
              "executive_vote": {"type": "number", "minimum": 0, "maximum": 30},
              "legislative_vote": {"type": "number", "minimum": 0, "maximum": 45},
              "judicial_vote": {"type": "number", "minimum": 0, "maximum": 25}
            }
          },
          "proposal_id": {"$ref": "#/$defs/proposal_id"},
          "roadmap_milestone_id": {"$ref": "#/$defs/roadmap_milestone_id"},
          "governance_decision_id": {"$ref": "#/$defs/governance_decision_id"},
          "dependencies": {"type": "array", "items": {"type": "string"}},
          "blocked_by": {"type": "array", "items": {"type": "string"}},
          "estimated_hours": {"type": "number", "minimum": 0},
          "actual_hours": {"type": "number", "minimum": 0},
          "tags": {"type": "array", "items": {"type": "string"}}
        },
        "additionalProperties": false
      }
    },
    "workflow_metrics": {
      "type": "object",
      "properties": {
        "cycle_time_avg_hours": {"type": "number", "minimum": 0},
        "throughput_per_week": {"type": "number", "minimum": 0},
        "wip_current": {"type": "number", "minimum": 0},
        "blocked_count": {"type": "number", "minimum": 0}
      }
    }
  }
}
