{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aegiside.org/schemas/mistakes.json",
  "title": "Mistakes Schema",
  "description": "Error patterns with predictive analytics",
  "type": "object",
  "required": ["schema_version", "last_updated", "error_patterns"],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time"
    },
    "error_patterns": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "category", "pattern_name", "frequency"],
        "properties": {
          "id": {"type": "string"},
          "category": {"type": "string"},
          "pattern_name": {"type": "string"},
          "description": {"type": "string"},
          "frequency": {"type": "number", "minimum": 1},
          "last_occurrence": {"type": "string", "format": "date-time"},
          "fix_strategy": {"type": "string"},
          "prevention_rule": {"type": "string"},
          "related_tasks": {"type": "array", "items": {"type": "string"}},
          "severity": {"type": "string", "enum": ["critical", "high", "medium", "low"]}
        }
      }
    },
    "instant_lint_tracking": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "file", "rule", "frequency"],
        "properties": {
          "id": {"type": "string"},
          "file": {"type": "string"},
          "rule": {"type": "string"},
          "frequency": {"type": "number", "minimum": 1},
          "auto_fixed": {"type": "boolean"},
          "pattern_identified": {"type": "string"}
        }
      }
    },
    "learning_data": {
      "type": "object",
      "properties": {
        "successful_fixes": {"type": "number", "minimum": 0},
        "patterns_prevented": {"type": "number", "minimum": 0},
        "time_saved_hours": {"type": "number", "minimum": 0},
        "accuracy_improvement": {"type": "number"}
      }
    },
    "predictive_warnings": {
      "type": "array",
      "maxItems": 10,
      "items": {
        "type": "object",
        "required": ["id", "type", "confidence"],
        "properties": {
          "id": {"type": "string"},
          "type": {"type": "string"},
          "confidence": {"type": "number", "minimum": 0, "maximum": 1},
          "description": {"type": "string"},
          "suggested_action": {"type": "string"},
          "related_task": {"type": "string"}
        }
      }
    }
  }
}
