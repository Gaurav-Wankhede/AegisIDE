{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aegiside.org/schemas/dependencies.json",
  "title": "Dependencies Schema",
  "description": "Security and version management for project dependencies",
  "type": "object",
  "required": ["schema_version", "last_updated", "dependencies"],
  "properties": {
    "schema_version": {"type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$"},
    "last_updated": {"type": "string", "format": "date-time"},
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "version", "type"],
        "properties": {
          "name": {"type": "string"},
          "version": {"type": "string"},
          "type": {"type": "string", "enum": ["production", "development", "peer", "optional"]},
          "latest_version": {"type": "string"},
          "security_status": {"type": "string", "enum": ["secure", "vulnerable", "unknown"]},
          "last_updated": {"type": "string", "format": "date-time"}
        }
      }
    },
    "vulnerabilities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "package", "severity"],
        "properties": {
          "id": {"type": "string"},
          "package": {"type": "string"},
          "severity": {"type": "string", "enum": ["critical", "high", "medium", "low"]},
          "description": {"type": "string"},
          "fixed_version": {"type": "string"},
          "published_date": {"type": "string", "format": "date-time"},
          "resolved": {"type": "boolean"}
        }
      }
    },
    "security_scan": {
      "type": "object",
      "properties": {
        "last_scan": {"type": "string", "format": "date-time"},
        "total_packages": {"type": "number", "minimum": 0},
        "vulnerable_packages": {"type": "number", "minimum": 0},
        "outdated_packages": {"type": "number", "minimum": 0},
        "scan_status": {"type": "string", "enum": ["passed", "failed", "warning"]}
      }
    },
    "update_policy": {
      "type": "object",
      "properties": {
        "auto_update_security": {"type": "boolean"},
        "auto_update_minor": {"type": "boolean"},
        "manual_approval_major": {"type": "boolean"}
      }
    }
  }
}
