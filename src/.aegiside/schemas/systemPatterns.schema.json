{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aegiside.org/schemas/systemPatterns.json",
  "title": "System Patterns Schema",
  "description": "Architecture patterns with practical implementation details + metrics synced FROM progress.json",
  "type": "object",
  "required": ["schema_version", "last_updated", "metrics"],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time"
    },
    "metrics": {
      "type": "object",
      "description": "SYNCED FROM progress.json after every task",
      "required": ["total_rl_score", "tasks_completed"],
      "properties": {
        "total_rl_score": {"type": "number"},
        "tasks_completed": {"type": "integer", "minimum": 0},
        "tasks_failed": {"type": "integer", "minimum": 0},
        "commits": {"type": "integer", "minimum": 0},
        "rl_reward": {"type": "number"},
        "success_rate": {"type": "number", "minimum": 0, "maximum": 1},
        "gae_advantage": {"type": "number", "description": "GAE advantage at time of reward"},
        "value_branch": {"type": "string", "enum": ["task_success", "validation", "pattern_reuse", "mcp_integration", "innovation"]},
        "timestamp": {"type": "string", "format": "date-time"}
      }
    },
    "architecture_patterns": {
      "type": "object",
      "description": "Named patterns with implementation details",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "pattern": {"type": "string"},
          "description": {"type": "string"},
          "implementation": {"type": "string"},
          "status": {"type": "string"},
          "rl_reward": {"type": "number", "minimum": 0}
        }
      }
    },
    "emd_compliance": {
      "type": "object",
      "additionalProperties": {"type": "string"}
    },
    "cost_savings": {
      "type": "object",
      "additionalProperties": {"type": "string"}
    },
    "mcp_integration": {
      "type": "object",
      "additionalProperties": {"type": "string"}
    },
    "deprecated": {
      "type": "object",
      "additionalProperties": {"type": "string"}
    }
  }
}
