{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aegiside.org/schemas/systemPatterns.json",
  "title": "System Patterns Schema",
  "description": "Architecture patterns with practical implementation details",
  "type": "object",
  "required": ["schema_version", "last_updated"],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time"
    },
    "architecture_patterns": {
      "type": "object",
      "description": "Named patterns with implementation details",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "pattern": {"type": "string"},
          "description": {"type": "string"},
          "implementation": {"type": "string"},
          "status": {"type": "string"},
          "rl_reward": {"type": "number", "minimum": 0}
        }
      }
    },
    "emd_compliance": {
      "type": "object",
      "additionalProperties": {"type": "string"}
    },
    "cost_savings": {
      "type": "object",
      "additionalProperties": {"type": "string"}
    },
    "mcp_integration": {
      "type": "object",
      "additionalProperties": {"type": "string"}
    },
    "deprecated": {
      "type": "object",
      "additionalProperties": {"type": "string"}
    }
  }
}
