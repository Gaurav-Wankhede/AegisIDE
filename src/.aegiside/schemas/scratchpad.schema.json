{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aegiside.org/schemas/scratchpad.json",
  "title": "Scratchpad Schema",
  "description": "Task priority queue - prepend new tasks at [0]",
  "type": "object",
  "required": ["schema_version", "last_updated", "top_append_metadata", "priority_queue"],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time"
    },
    "top_append_metadata": {
      "type": "object",
      "properties": {
        "latest_task_at_index_0": {"type": "boolean"},
        "last_prepend_timestamp": {"type": "string", "format": "date-time"},
        "total_prepends": {"type": "integer", "minimum": 0},
        "validation_passed": {"type": "boolean"}
      }
    },
    "priority_queue": {
      "type": "array",
      "description": "Prepend new tasks at [0]",
      "items": {
        "type": "object",
        "required": ["id", "task", "priority"],
        "properties": {
          "id": {"type": "string"},
          "task": {"type": "string"},
          "priority": {"type": "string"},
          "blocker": {"type": "boolean"},
          "context": {"type": "string"},
          "added_at": {"type": "string", "format": "date-time"}
        }
      }
    },
    "completed": {
      "type": "array",
      "maxItems": 50,
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "task": {"type": "string"},
          "completed_at": {"type": "string", "format": "date-time"},
          "outcome": {"type": "string"}
        }
      }
    }
  }
}
