{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$defs": {
    "task_id": {"type": "string"},
    "roadmap_milestone_id": {"type": "string"}
  },
  "type": "object",
  "required": ["schema_version", "last_updated", "metrics", "top_append_metadata", "priority_queue"],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time"
    },
    "metrics": {
      "type": "object",
      "description": "SYNCED FROM progress.json after every task",
      "required": ["total_rl_score", "tasks_completed"],
      "properties": {
        "total_rl_score": {"type": "number"},
        "tasks_completed": {"type": "integer", "minimum": 0},
        "tasks_failed": {"type": "integer", "minimum": 0},
        "commits": {"type": "integer", "minimum": 0}
      }
    },
    "top_append_metadata": {
      "type": "object",
      "properties": {
        "latest_task_at_index_0": {"type": "boolean"},
        "last_prepend_timestamp": {"type": "string", "format": "date-time"},
        "total_prepends": {"type": "integer", "minimum": 0},
        "validation_passed": {"type": "boolean"}
      }
    },
    "priority_queue": {
      "type": "array",
      "description": "Prepend new tasks at [0]",
      "items": {
        "type": "object",
        "required": ["id", "task", "priority"],
        "properties": {
          "id": {"$ref": "#/$defs/task_id"},
          "task": {"type": "string"},
          "priority": {"type": "string"},
          "blocker": {"type": "boolean"},
          "context": {"type": "string"},
          "roadmap_milestone_id": {"$ref": "#/$defs/roadmap_milestone_id"},
          "added_at": {"type": "string", "format": "date-time"},
          "complexity_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "Task complexity for curriculum ordering: f(lines_affected, dependencies, cognitive_load)"
          },
          "lookahead_candidates": {
            "type": "array",
            "description": "Monte Carlo Beam Search candidates (beam_width=3-5)",
            "maxItems": 5,
            "items": {
              "type": "object",
              "properties": {
                "action": {"type": "string", "description": "Candidate action/approach"},
                "rollout_steps": {"type": "integer", "default": 3, "description": "Short horizon simulation"},
                "estimated_value": {"type": "number", "description": "Q-value from critic"},
                "selected": {"type": "boolean", "description": "Best candidate chosen"}
              }
            }
          }
        }
      }
    },
    "completed": {
      "type": "array",
      "maxItems": 50,
      "items": {
        "type": "object",
        "properties": {
          "id": {"$ref": "#/$defs/task_id"},
          "task": {"type": "string"},
          "completed_at": {"type": "string", "format": "date-time"},
          "outcome": {"type": "string"},
          "roadmap_milestone_id": {"$ref": "#/$defs/roadmap_milestone_id"}
        }
      }
    }
  }
}
