{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$defs": {
    "task_id": {"type": "string"},
    "roadmap_milestone_id": {"type": "string"}
  },
  "type": "object",
  "required": ["schema_version", "last_updated", "metrics", "top_append_metadata", "priority_queue"],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time"
    },
    "metrics": {
      "type": "object",
      "description": "Local event log ONLY - Reference progress.json for total_rl_score",
      "required": ["rl_source_ref", "tasks_completed"],
      "properties": {
        "rl_source_ref": {"type": "string", "const": "progress.json", "description": "SINGLE SOURCE OF TRUTH for total_rl_score"},
        "tasks_completed": {"type": "integer", "minimum": 0},
        "tasks_failed": {"type": "integer", "minimum": 0},
        "commits": {"type": "integer", "minimum": 0}
      }
    },
    "top_append_metadata": {
      "type": "object",
      "properties": {
        "latest_task_at_index_0": {"type": "boolean"},
        "last_prepend_timestamp": {"type": "string", "format": "date-time"},
        "total_prepends": {"type": "integer", "minimum": 0},
        "validation_passed": {"type": "boolean"}
      }
    },
    "priority_queue": {
      "type": "array",
      "description": "TOP-APPEND MANDATORY: Newest task MUST be at [0]. Prepend, never append.",
      "items": {
        "type": "object",
        "required": ["id", "task", "priority"],
        "properties": {
          "id": {"$ref": "#/$defs/task_id"},
          "task": {"type": "string"},
          "priority": {"type": "string"},
          "blocker": {"type": "boolean"},
          "context": {"type": "string"},
          "roadmap_milestone_id": {"$ref": "#/$defs/roadmap_milestone_id"},
          "added_at": {"type": "string", "format": "date-time"},
          "complexity_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "GAP 4 CURRICULUM LEARNING: Task complexity score for automatic ordering. complexity = f(lines_affected, dependencies, cognitive_load). Order: simple→medium→hard for 35% fewer retries"
          },
          "lookahead_candidates": {
            "type": "array",
            "description": "GAP 3 MCBS LOOKAHEAD: Monte Carlo Beam Search candidates (beam_width=3-5). Generate B actions→rollout 3-5 steps→evaluate Q-values→select best. Achieves 90% max reward in 200k timesteps",
            "maxItems": 5,
            "items": {
              "type": "object",
              "properties": {
                "action": {"type": "string", "description": "Candidate action/approach"},
                "rollout_steps": {"type": "integer", "default": 3, "description": "Short horizon simulation"},
                "estimated_value": {"type": "number", "description": "Q-value from critic"},
                "selected": {"type": "boolean", "description": "Best candidate chosen"}
              }
            }
          }
        }
      }
    },
    "completed": {
      "type": "array",
      "description": "TOP-APPEND MANDATORY: Newest completed task MUST be at [0]. Prepend, never append.",
      "maxItems": 50,
      "items": {
        "type": "object",
        "properties": {
          "id": {"$ref": "#/$defs/task_id"},
          "task": {"type": "string"},
          "completed_at": {"type": "string", "format": "date-time"},
          "outcome": {"type": "string"},
          "roadmap_milestone_id": {"$ref": "#/$defs/roadmap_milestone_id"}
        }
      }
    },
    "undo_stack": {
      "type": "array",
      "description": "UX Gap 5 fix: User-friendly undo/rollback. TOP-APPEND: [0] = most recent action",
      "maxItems": 20,
      "items": {
        "type": "object",
        "properties": {
          "commit_hash": {"type": "string", "description": "Git commit SHA for rollback"},
          "description": {"type": "string", "description": "Plain English: 'Added JWT authentication'"},
          "timestamp": {"type": "string", "format": "date-time"},
          "files_changed": {"type": "array", "items": {"type": "string"}},
          "rl_impact": {"type": "number", "description": "RL score earned/lost"},
          "reversible": {"type": "boolean", "default": true}
        }
      }
    },
    "task_queue_summary": {
      "type": "object",
      "description": "UX Gap 12 fix: User-friendly task queue visibility",
      "properties": {
        "total_tasks": {"type": "integer", "minimum": 0},
        "current_task_progress": {"type": "integer", "minimum": 0, "maximum": 100, "description": "Percentage complete"},
        "estimated_completion": {"type": "string", "format": "date-time"},
        "user_can_reorder": {"type": "boolean", "default": true},
        "display_format": {"type": "string", "enum": ["list", "emoji", "detailed"], "default": "emoji"}
      }
    },
    "activity_log": {
      "type": "array",
      "description": "UX Gap 14 fix: User-accessible activity history. TOP-APPEND: [0] = most recent",
      "maxItems": 50,
      "items": {
        "type": "object",
        "properties": {
          "timestamp": {"type": "string", "format": "date-time"},
          "action": {"type": "string", "description": "Plain English: 'Researched JWT authentication'"},
          "workflow": {"type": "string", "description": "Which workflow: /research, /next, etc."},
          "files_affected": {"type": "array", "items": {"type": "string"}},
          "outcome": {"type": "string", "enum": ["success", "failed", "skipped", "partial"]},
          "rl_impact": {"type": "number"},
          "user_visible": {"type": "boolean", "default": true}
        }
      }
    }
  }
}
